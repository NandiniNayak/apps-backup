<p id="notice"><%= notice %></p>

<h1>Menus</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Avaialability</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @menus.exists? %>
      <% @menus.each do |menu| %>
        <tr>
          <td><%= menu.name %></td>
          <td><%= menu.category %></td>
          <td><%= menu.avaialability ? 'YES' : 'NO' %> </td>
          <td><%= menu.price %></td>
          <td><%= link_to 'Show', menu %></td>
          <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
          <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% else %>
      <p> Item not available </p>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Menu', new_menu_path %>
